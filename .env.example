# Environment Configuration for College Timetable Scheduler
# Copy this file to .env and modify the values as needed

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///timetable.db
# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://username:password@hostname:port/database

# Application Settings
MAX_CLASSES_PER_DAY=8
DEFAULT_TIME_SLOTS=09:00-10:00,10:00-11:00,11:00-12:00,12:00-01:00,02:00-03:00,03:00-04:00,04:00-05:00,05:00-06:00
DEFAULT_WORKING_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday

# College Information (Optional)
COLLEGE_NAME=Your College Name
COLLEGE_ADDRESS=College Address
COLLEGE_WEBSITE=https://yourcollege.edu

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Debug Settings
DEBUG=True
TESTING=False